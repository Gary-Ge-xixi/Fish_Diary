/** wiki.wxss */

/* 确保状态栏区域为白色背景 */
page {
  background-color: #fff;
}

/* 页面容器 */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--background);
}

.content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 搜索栏 */
.search-bar {
  padding: var(--spacing-md);
  background-color: var(--card);
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--muted);
  border-radius: var(--radius-full);
  padding: 0 var(--spacing-lg);
  height: 80rpx;
  transition: background-color 0.15s, box-shadow 0.15s;
}

.search-input-wrapper:focus-within {
  background-color: var(--card);
  box-shadow: 0 0 0 2rpx var(--border);
}

.search-icon {
  margin-right: var(--spacing-sm);
  font-size: var(--text-base);
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: var(--text-base);
  color: var(--foreground);
}

.input-placeholder {
  color: var(--muted-foreground);
}

/* 分类筛选 */
.category-scroll {
  background-color: var(--card);
  height: 96rpx;
  white-space: nowrap;
  border-bottom: 1rpx solid var(--border);
}

.category-list {
  display: inline-flex;
  padding: 0 var(--spacing-lg);
  height: 96rpx;
  align-items: center;
  gap: var(--spacing-sm);
}

.category-chip {
  padding: 12rpx 28rpx;
  border-radius: var(--radius-full);
  background-color: var(--muted);
  color: var(--muted-foreground);
  font-size: var(--text-sm);
  transition: all 0.15s;
}

.category-chip:active {
  transform: scale(0.97);
}

.category-chip--active {
  background-color: var(--primary);
  color: var(--primary-foreground);
  font-weight: 500;
}

/* 列表区域 */
.wiki-scroll {
  flex: 1;
  background-color: var(--background);
}

.wiki-list {
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.wiki-card {
  display: flex;
  background-color: var(--card);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  gap: var(--spacing-lg);
  border: 1rpx solid var(--border);
  transition: transform 0.15s, box-shadow 0.15s;
}

.wiki-card:active {
  transform: scale(0.99);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.wiki-image-wrapper {
  width: 140rpx;
  height: 140rpx;
  background-color: var(--muted);
  border-radius: var(--radius);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
}

.wiki-emoji {
  font-size: 64rpx;
}

.wiki-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.wiki-row {
  display: flex;
  font-size: 24rpx;
  margin-top: 8rpx;
  line-height: 1.5;
}

.wiki-label {
  color: var(--muted-foreground);
  min-width: 70rpx;
  flex-shrink: 0;
  font-size: 24rpx;
}

.wiki-value {
  color: var(--foreground);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
}

.wiki-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--foreground);
  line-height: 1.3;
  letter-spacing: -0.01em;
}

.wiki-eng {
  font-size: 24rpx;
  color: var(--muted-foreground);
  margin-top: 4rpx;
}

.difficulty-badge {
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: var(--radius-sm);
  font-weight: 500;
  letter-spacing: 0.02em;
}

.difficulty-badge.easy {
  background-color: #dcfce7;
  color: var(--success-foreground);
}

.difficulty-badge.medium {
  background-color: #fef3c7;
  color: var(--warning-foreground);
}

.difficulty-badge.hard {
  background-color: #fee2e2;
  color: var(--danger-foreground);
}

.tags {
  display: flex;
  gap: var(--spacing-xs);
  margin-top: var(--spacing-xs);
}

.tag {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  background-color: var(--secondary);
  color: var(--muted-foreground);
  border-radius: 6rpx;
}

/* ========== 详情弹窗 - 与首页弹窗规范保持一致 ========== */

/* 弹窗遮罩 - 覆盖全屏包括 tabBar */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000; /* 高于 tabBar z-index: 500 */
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

/* 底部弹窗容器 */
.popup--bottom {
  position: relative;
  width: 100%;
  background: var(--card);
  border-radius: 24rpx 24rpx 0 0;
  display: block;
  animation: slideUp 0.25s ease-out;
  overflow: visible;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 弹窗头部 - 三栏布局 */
.popup__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg) var(--spacing-lg);
  border-bottom: 1rpx solid var(--border);
  flex-shrink: 0;
  background: var(--card);
}

.popup__title {
  font-size: var(--text-lg);
  font-weight: 600;
  color: var(--foreground);
  letter-spacing: -0.01em;
}

.popup__close {
  font-size: 44rpx;
  color: var(--muted-foreground);
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  transition: background-color 0.15s;
}

.popup__close:active {
  background: var(--muted);
}

.popup__placeholder {
  width: 56rpx;
}

/* 弹窗内容区 */
.popup__body {
  width: 100%;
  height: 70vh;
  flex-shrink: 0;
}

/* 旧版本兼容 */
.popup-content {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  height: 75vh;
}

.detail-header {
  padding: var(--spacing-lg);
  display: flex;
  gap: var(--spacing-lg);
  align-items: center;
  border-bottom: 2rpx solid var(--border);
}

.detail-avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #eff6ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.detail-titles {
  display: flex;
  flex-direction: column;
}

.detail-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--foreground);
  letter-spacing: -0.02em;
}

.detail-eng {
  font-size: 28rpx;
  color: var(--muted-foreground);
}

.detail-sci {
  font-size: 24rpx;
  color: var(--muted-foreground);
  font-style: italic;
  margin-top: 4rpx;
}

.detail-section {
  padding: var(--spacing-lg);
  border-bottom: 2rpx solid var(--border);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: var(--spacing-md);
  display: block;
  letter-spacing: -0.01em;
  color: var(--foreground);
}

.section-text {
  font-size: 26rpx;
  color: var(--muted-foreground);
  line-height: 1.6;
}

.detail-grid {
  display: flex;
  justify-content: space-between;
  background-color: var(--secondary);
  padding: var(--spacing-md);
  border-radius: var(--radius);
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grid-label {
  font-size: 24rpx;
  color: var(--muted-foreground);
  margin-bottom: 8rpx;
}

.grid-value {
  font-family: var(--font-mono);
  font-size: 28rpx;
  font-weight: 600;
  color: var(--foreground);
  font-variant-numeric: tabular-nums;
  letter-spacing: -0.02em;
}

.info-row {
  display: flex;
  margin-bottom: var(--spacing-sm);
}

.info-label {
  width: 100rpx;
  font-size: 28rpx;
  color: var(--muted-foreground);
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--foreground);
}

/* 加载状态 */
.loading-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  gap: var(--spacing-md);
}

/* 骨架屏动画 */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 骨架屏卡片 */
.skeleton-card {
  display: flex;
  background-color: var(--card);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  gap: var(--spacing-lg);
  border: 1rpx solid var(--border);
}

.skeleton-image {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(90deg, var(--muted) 25%, var(--background) 50%, var(--muted) 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: var(--radius);
  flex-shrink: 0;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.skeleton-line {
  height: 28rpx;
  background: linear-gradient(90deg, var(--muted) 25%, var(--background) 50%, var(--muted) 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: var(--radius-sm);
}

.skeleton-line.short {
  width: 60%;
}

.skeleton-line.medium {
  width: 80%;
}

.load-more {
  padding: var(--spacing-lg);
  text-align: center;
}

/* 图片样式 */
.wiki-image {
  width: 100%;
  height: 100%;
  border-radius: var(--radius);
}

.detail-avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* ========== 新增：饲养技巧提示框 ========== */
.care-tip-box {
  background-color: #eff6ff;
  border: 1rpx solid #bfdbfe;
  border-radius: var(--radius);
  margin: var(--spacing-md) var(--spacing-lg);
  padding: var(--spacing-lg) !important;
  border-bottom: none !important;
}

.care-tip-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.care-tip-icon {
  font-size: 32rpx;
}

.care-tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e40af;
}

.care-tip-text {
  font-size: 26rpx;
  color: #1e3a8a;
  line-height: 1.6;
}

/* ========== 新增：注意事项警告框 ========== */
.notes-box {
  background-color: #fef3c7;
  border: 1rpx solid #fcd34d;
  border-radius: var(--radius);
  margin: var(--spacing-md) var(--spacing-lg);
  padding: var(--spacing-lg) !important;
  border-bottom: none !important;
}

.notes-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.notes-icon {
  font-size: 32rpx;
}

.notes-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #92400e;
}

.notes-text {
  font-size: 26rpx;
  color: #78350f;
  line-height: 1.6;
}

/* ========== 参数网格响应式调整 ========== */
.detail-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  gap: var(--spacing-md);
}

.grid-item {
  width: calc(33.33% - var(--spacing-md));
  min-width: 140rpx;
}
