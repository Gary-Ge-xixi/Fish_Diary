.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #ffffff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid #e4e4e7;
  z-index: 500; /* 降低 z-index，让弹窗能遮挡 */
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
  transition: all 0.2s ease;
}

.tab-bar-item.active {
  transform: scale(1.02);
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 22rpx;
  color: #71717a;
  transition: color 0.2s ease;
}

.tab-bar-item.active .tab-text {
  color: #18181b;
  font-weight: 500;
}
